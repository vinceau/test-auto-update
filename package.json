{
  "productName": "Project Clippi",
  "name": "project-clippi",
  "version": "1.4.3",
  "description": "A Melee Automation Framework",
  "license": "MIT",
  "author": {
    "name": "Vince Au",
    "email": "vinceau09@gmail.com",
    "url": "https://github.com/vinceau"
  },
  "scripts": {
    "start": "electron-webpack dev",
    "build": "electron-webpack",
    "dist": "yarn build && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "dist:all": "yarn run dist --x64 -wml",
    "dist:win": "yarn run dist --x64 -w",
    "dist:mac": "yarn run dist -m",
    "dist:linux": "yarn run dist -l",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "yarn run lint --fix"
  },
  "dependencies": {
    "@vinceau/event-actions": "^0.0.4",
    "@vinceau/slp-realtime": "^3.0.2",
    "electron-context-menu": "^0.15.1",
    "electron-store": "^5.1.1",
    "fast-glob": "^3.1.1",
    "filename-reserved-regex": "^2.0.0",
    "filenamify": "^4.1.0",
    "formatter": "^0.4.1",
    "fs-extra": "^8.1.0",
    "moment": "^2.24.0",
    "node-notifier": "^6.0.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "rxjs": "^6.5.4",
    "source-map-support": "^0.5.10",
    "twitch": "^4.0.10",
    "twitch-chat-client": "^4.0.10",
    "twitch-electron-auth-provider": "^4.0.10"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/react": "^16.9.50",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "electron": "7.3.2",
    "electron-builder": "22.5.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "node-sass": "^4.14.0",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "raw-loader": "^4.0.1",
    "react-hot-loader": "4.6.5",
    "sass-loader": "^7.1.0",
    "ts-unused-exports": "^6.1.2",
    "typescript": "^3.3.3333",
    "webpack": "4.44.1",
    "webpack-build-notifier": "^0.1.30",
    "worker-loader": "^2.0.0"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "build": {
    "appId": "au.id.vince.clippi",
    "files": [
      "build/icon.*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.lifestyle"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
